<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.yulikexuan</groupId>
    <artifactId>core-java-bom</artifactId>
    <version>2021.03-SNAPSHOT</version>
  </parent>
  <groupId>com.itopia</groupId>
  <artifactId>tecsys-itopia-dependencies</artifactId>
  <version>2021.03-SNAPSHOT</version>
  <packaging>pom</packaging>
  <modules>
    <module>../tecsys-itopia-starter-parent</module>
  </modules>
  <distributionManagement>
    <repository>
      <id>packagecloud.releases</id>
      <url>packagecloud+https://packagecloud.io/cloudlab/release</url>
    </repository>
    <snapshotRepository>
      <id>packagecloud.releases</id>
      <url>packagecloud+https://packagecloud.io/cloudlab/release</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <flatten-maven-plugin.version>1.2.7</flatten-maven-plugin.version>
    <revision>2021.03-SNAPSHOT</revision>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.itopia</groupId>
        <artifactId>itopia-base-app</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>com.itopia</groupId>
        <artifactId>itopia-base-web</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>com.itopia</groupId>
        <artifactId>itopia-meta-app</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>com.itopia</groupId>
        <artifactId>itopia-meta-web</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>com.itopia</groupId>
        <artifactId>itopia-dms-app</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>flatten-maven-plugin</artifactId>
          <version>${flatten-maven-plugin.version}</version>
          <executions>
            <execution>
              <id>flatten</id>
              <phase>process-resources</phase>
              <goals>
                <goal>flatten</goal>
              </goals>
            </execution>
            <execution>
              <id>flatten.clean</id>
              <phase>clean</phase>
              <goals>
                <goal>clean</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <updatePomFile>true</updatePomFile>
            <flattenMode>resolveCiFriendliesOnly</flattenMode>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>flatten-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
